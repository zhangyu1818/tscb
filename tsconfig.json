{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "moduleResolution": "Node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictBindCallApply": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "declaration": false,
    "outDir": "./dist"
  },
  "include": ["lib"]
}
